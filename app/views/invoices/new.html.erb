<div class="container">
  <% if @invoice.errors.any? %>
    <div>
      <ul>
        <% @invoice.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with scope: :invoice, url: create_invoice_path, local: true do |form| %>

    <div class="form-group">
      <label>Brand Manager</label>
      <%= form.text_field :brand_manager, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <label>Narration</label>
      <%= form.text_field :narration, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <label>Customer Name</label>
      <%= form.text_field :customer_name, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
      <label for="exampleInputEmail1">Reference</label>
      <%= form.text_field :reference,class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
      <label>Amount</label>
      <%= form.number_field :amount, class: 'form-control', required: true %>
    </div>


    
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</div>